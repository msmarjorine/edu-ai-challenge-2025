{
  "name": "seabattle-game",
  "version": "2.0.0",
  "description": "A modernized command-line Sea Battle (Battleship) game implementation",
  "main": "seabattle-modern.js",
  "type": "module",
  "scripts": {
    "start": "node seabattle-modern.js",
    "test": "node --experimental-vm-modules node_modules/.bin/jest",
    "test:watch": "npm test -- --watch",
    "test:coverage": "npm test -- --coverage"
  },
  "keywords": [
    "battleship",
    "seabattle",
    "game",
    "cli",
    "javascript",
    "es6"
  ],
  "author": "Refactored by AI Assistant",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "babel-jest": "^29.5.0",
    "jest": "^29.5.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  }
} 